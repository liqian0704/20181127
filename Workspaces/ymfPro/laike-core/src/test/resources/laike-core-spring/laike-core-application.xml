<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd"
	   default-lazy-init="false">

	<context:component-scan base-package="com.yeepay.g3.core.laike"/>

	<import resource="classpath*:/yeepay-event-spring/event-base-bean.xml"/>
	<import resource="classpath*:/laike-core-spring/laike-core-datasource.xml"/>
	<import resource="classpath*:/laike-core-spring/laike-core-query.xml"/>
	<import resource="classpath*:/laike-core-spring/laike-core-aop.xml"/>
	<import resource="classpath*:/laike-core-spring/laike-soa-consumer.xml"/>
	<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"/>


</beans>